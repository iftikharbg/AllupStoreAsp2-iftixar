@model List<Category>
@{ 
    ViewData["Title"] = "Index";
    int order = 0;
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                    <p class="card-description">
                        Add class <code>.table</code>
                    </p>
                    <input type="text" id="categorysearch" placeholder="Search"  />
                    <div class="table-responsive">

                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Name</th>
                                    <th>Is main</th>
                                    <th>Image</th>
                                    <th>Operations</th>


                                </tr>
                            </thead>
                            <tbody id="tablebody">
                                @foreach (var item in Model)
                                {
                                    order++;
                                <tr>

                                    <td>@item.Name</td>
                                    <td>@item.IsMain</td>
                                    <td><img style="width:200px;height:200px;border-radius:50%" src="~/assets/images/@item.Image"/></td>

                                    <td>
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>


                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>


                                    </td>

                                </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

