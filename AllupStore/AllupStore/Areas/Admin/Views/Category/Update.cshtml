@model CategoryCreateViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample" asp-controller="Category" asp-action="Update" method="post" asp-route-id="@ViewBag.CategoryId" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Name</label>
                            <input type="text" asp-for="Name"  class="form-control" id="exampleInputUsername1" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Is main</label>
                            @Html.CheckBoxFor(model => model.IsMain)
                       
                          
                       

                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Parent</label>
                            <select asp-for="ParentId">
                                @foreach (var item in ViewBag.Parents)
                                {
                                   <option value="@item.Id">@item.Name</option>
                                    

                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Photo</label>
                            <input  asp-for="File" class="form-control" id="exampleInputUsername1" placeholder="Photo">
                        </div>


                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

        @section scripts{
            <partial name="_ValidatePartial">
                <script src="https://cdn.ckeditor.com/ckeditor5/30.0.0/classic/ckeditor.js"></script>
                <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
               console.log("error")
            })
                </script>

        }


